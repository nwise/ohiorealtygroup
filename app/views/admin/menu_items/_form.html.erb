<%= form_for([:admin, @menu_item]) do |f| %>
   
  <% if @menu_item.parent.nil? && params[:parent_id] %>
    <%= f.hidden_field :parent_id, :value => params[:parent_id] %>  
  <% elsif !@menu_item.parent.nil? %>
    <p><strong>Parent</strong>: <%= @menu_item.parent.label %></p>
  <% end %>

  <p>
    <%= f.label :label %>
    <%= f.text_field :label %>
  </p>
  
  <p>
    <%= f.label :page_id, 'Page' %> <%= f.collection_select :page_id, Page.published, :id, :url_tag, {:include_blank => true} %> <strong>OR</strong>
    <%= f.label :url, 'Path' %> <%= f.text_field :url %>
  </p>

  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
